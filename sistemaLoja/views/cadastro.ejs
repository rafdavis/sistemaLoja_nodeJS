<%- include ('partials/navbar.ejs') %>

<% if (messages.danger) { %>
    <div class="alert alert-danger">
        <%= messages.danger %>
    </div>
<% } %>

<div class="container">
    <div class="card mt-4">
        <div class="card-header">
            <h1>Cadastro de Usuário</h1>
        </div>
        <div class="card-body">
            <form action="/createUser" method="POST">
                <label>E-mail:</label>
                <input class="form-control" type="email" name="email" placeholder="email@exemplo.com" required>
                <br>
                <label>Senha:</label>
                <input class="form-control" type="password" name="password" placeholder="Insira uma senha com no mínimo 8 caracteres" required>
                <br>
                <input type="submit" class="btn btn-success btn block" value="Cadastrar">
            </form>
            <hr>
            <h6>Já possui conta ? <a href="/login">Faça login!</a></h6>
        </div>
    </div>
</div>

