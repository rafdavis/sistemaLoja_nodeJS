<%- include ('partials/navbar.ejs') %>

<% if (messages.success) { %>
    <div class="alert alert-danger">
        <%= messages.danger %>
    </div>
<% } %>

<div class="container col-4">
    <div class="card mt-4">
        <div class="card-header">
            <h1>Login de Administrador</h1>
        </div>
        <div class="card-body m-auto">
            <p style="color: red; font-size: 0.7em;">Você precisa estar logado para acessar os recursos do painel</p>
            <form action="/authenticate" method="POST">
                <label>E-mail:</label>
                <input class="form-control" type="email" name="email" placeholder="email@exemplo.com" required>
                <br>
                <label>Senha:</label>
                <input class="form-control" type="password" name="password" placeholder="Insira sua senha" required>
                <br>
                <input type="submit" class="btn btn-success btn block" value="Entrar">
            </form>
            <hr>
            <h6>Não possui conta ? <a href="/cadastro">Cadastre-se!</a></h6>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>