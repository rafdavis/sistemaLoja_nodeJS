<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Cadastro do Pedido</h1>
    </div>
    <div class="card-body">
      <form method="POST" action="/pedidos/new">
        <label>Número do Produto:</label>
        <input type="text" name="numero" id="numero" placeholder="Insira o Número" class="form-control" required>

        <label>Valor do Produto:</label>
        <input type="text" name="valor" id="valor" placeholder="Insira o Valor" class="form-control" required>
        <br>
        <button class="btn btn-success">Cadastrar</button>
      </form>
    </div>
  </div>
</div>
<br>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Pedidos</h1>
    </div>
    <div class="card-body">
      <table>
        <thead>
          <tr>
            <th>Número</th>
            <th>Valor</th> 
            <th style="text-align: center;" colspan="2">Ações:</th>
          </tr>
        </thead>
        <tbody>
          <% pedidos.forEach(pedido => { %>
            <tr>
              <td> <%= pedido.numero %></td>
              <td> <%= pedido.valor %></td>
              <td><a style="color: orange;" href="/pedidos/edit/<%=pedido.id %>">Editar</a></td>
              <td><a style="color: red;" href="/pedidos/delete/<%= pedido.id %>">Excluir</a></td>
            </tr>
         <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include ('partials/footer.ejs') %>  